#: import SlideTransition kivy.uix.screenmanager.SlideTransition

WindowManager:
    LogoScreen:
    TelaInicial:
    Padrao:
    Cadastro:
    Login:
    MainMenu:
    AddProduct:
    ViewProduct:
    EditProduct:
    GlobalProducts:

<LogoScreen>
    MDScreen:
        md_bg_color: "white"
        Image:
            source: "Semestre7/Desenvolvimento de Software/PrecoBom/imgs/LOGO.png"

<MainMenu>
    name: "main_menu"

    MDScreen:
        MDFloatLayout:
            MDTabs:
                on_tab_switch: app.on_tab_switch(*args)
                Tabs:
                    title: "Meus produtos"
                    MDScrollView:
                        id: scroll
                        MDList:
                            id: products_list

                Tabs:
                    title: "Produtos"
                    GlobalProducts:
                        id: global_products

                    MDFillRoundFlatIconButton:
                        icon: "plus"
                        text: "Cadastrar produto"
                        y: 0 + dp(20)
                        x: root.width - self.width - dp(20)
                        on_release:
                            root.manager.transition = SlideTransition()
                            root.manager.transition.direction = 'left'
                            root.manager.current = 'add_product'

<AddProduct>
    name: "add_product"

    MDScreen:
        MDBoxLayout:
            id: add_product
            padding: dp(20)
            spacing: dp(20)
            orientation: 'vertical'
            adaptive_height: True
            y: root.height - self.height

            Label:
                text: "Registrar Produto"
                font_size: "24sp"

            MDTextField:
                id: texfield_product_name
                hint_text: "Nome do produto"

            MDTextField:
                id: textfield_product_link
                hint_text: "Link do produto"

            MDTextField:
                id: textfield_product_tags
                hint_text: "Tags do produto"

            Label:
                id: error_text
                text: ""

            MDBoxLayout:
                id: add_product_buttons
                adaptive_height: True
                adaptive_width: True
                pos_hint: {'right': 1}

                MDRectangleFlatButton:
                    text: "Cancelar"
                    line_color: (0, 0, 0, 0)
                    theme_text_color: "Custom"
                    text_color: "white"
                    on_release:
                        root.manager.transition = SlideTransition()
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'main_menu'

                MDRaisedButton:
                    text: "Salvar"
                    on_release:
                        root.ids.error_text.text = app.save_product(root.ids.texfield_product_name.text, root.ids.textfield_product_link.text, root.ids.textfield_product_tags.text)

<ViewProduct>
    name: "view_product"

    MDScreen:
        MDBoxLayout:
            orientation: 'vertical'
            spacing: dp(40)
            padding: dp(40)
            adaptive_height: True
            y: root.height - self.height

            Label:
                id: product_name
                text: "NVIDIA RTX 2090"
                bold: True
                font_size: "18sp"

            MDBoxLayout:
                spacing: dp(10)
                pos_hint: {"center_x": .5}

                MDLabel:
                    id: original_price
                    text: "R$11.550,00"
                    theme_text_color: "Hint"
                    halign: "right"
                    strikethrough: True

                MDLabel:
                    id: discount
                    text: f"{str(int(app.calculate_discount(11550.00, 11000.00)))}%"
                    theme_text_color: "Custom"
                    text_color: "lime"
                    halign: "left"
                    size_hint: 0.9, 1

            MDLabel:
                id: new_price
                text: "R$11.000,00"
                theme_text_color: "Custom"
                text_color: "lime"
                halign: "center"

            Graph:
                id: graph

            MDFloatLayout:
                MDFillRoundFlatButton:
                    text: "Editar"
                    pos_hint: {"center_x": .1}
                    y: 50
                    on_release:
                        app.fill_edit_screen_textfields()
                        root.manager.transition = SlideTransition()
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'edit_product'

                MDFillRoundFlatButton:
                    id: add_product_button
                    text: "Adicionar produto"
                    pos_hint: {"center_x": .35}
                    y: 50
                    on_release: app.add_or_remove_product()

                MDFillRoundFlatButton:
                    text: "Visitar p√°gina"
                    pos_hint: {"center_x": .65}
                    y: 50
                    on_release: app.visit_site(root.ids.product_name.text)

                MDFillRoundFlatButton:
                    text: "Voltar"
                    pos_hint: {"center_x": .9}
                    y: 50
                    on_release:
                        root.manager.transition = SlideTransition()
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'main_menu'

<EditProduct>
    name: "edit_product"

    MDScreen:
        MDBoxLayout:
            id: edit_product
            padding: dp(20)
            spacing: dp(20)
            orientation: 'vertical'
            adaptive_height: True
            y: root.height - self.height

            Label:
                text: "Editar Produto"
                font_size: "24sp"

            MDTextField:
                id: texfield_edit_product_name
                hint_text: "Nome do produto"

            MDTextField:
                id: texfield_edit_product_tags
                hint_text: "Tags do produto"

            Label:
                id: error_edit_text
                text: ""

            MDBoxLayout:
                id: edit_product_buttons
                adaptive_height: True
                adaptive_width: True
                pos_hint: {'right': 1}

                MDRectangleFlatButton:
                    text: "Cancelar"
                    line_color: (0, 0, 0, 0)
                    theme_text_color: "Custom"
                    text_color: "white"
                    on_release:
                        root.manager.transition = SlideTransition()
                        root.manager.transition.direction = 'left'
                        root.manager.current = 'main_menu'

                MDRaisedButton:
                    text: "Salvar"
                    on_release:
                        root.ids.error_edit_text.text = app.edit_product(root.ids.texfield_edit_product_name.text, root.ids.texfield_edit_product_tags.text)
