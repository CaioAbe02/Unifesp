<GlobalProducts>:
    MDBoxLayout:
        orientation: 'vertical'
        MDFloatLayout:
            orientation: 'horizontal'
            adaptive_height: True
            height: dp(60)
            MDTextField:
                id: textfield_search
                hint_text: "Pesquisar produto"
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint: 0.6, None

            MDIconButton:
                icon: "magnify"
                pos_hint: {'center_x': .85, 'center_y': .5}
                on_release: app.search_product(root.ids.textfield_search.text)

        MDScrollView:
            id: global_scroll
            MDList:
                id: global_products_list