<Cadastro>:
    MDTextField:
        id: cpf
        hint_text: "CPF"
        pos_hint: {"center_x": .5, "center_y": .8}
        size_hint: 0.6, None

    MDTextField:
        id: endereco
        hint_text: "Endereço"
        pos_hint: {"center_x": .5, "center_y": .7}
        size_hint: 0.6, None

    MDTextField:
        id: idade
        hint_text: "Idade"
        pos_hint: {"center_x": .5, "center_y": .6}
        size_hint: 0.6, None

    MDTextField:
        id: nascimento
        hint_text: "Data de nascimento"
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: 0.6, None

    MDTextField:
        id: nome
        hint_text: "Nome"
        pos_hint: {"center_x": .5, "center_y": .4}
        size_hint: 0.6, None

    MDTextField:
        id: salario
        hint_text: "Salário"
        pos_hint: {"center_x": .5, "center_y": .3}
        size_hint: 0.6, None

    Label:
        id: aviso
        text: ""
        pos_hint: {"center_x": .5, "center_y": .2}
        color: (0, 0, 0, 1)

    MDFillRoundFlatButton:
        text: "Registrar"
        pos_hint: {"center_x": .5, "center_y": .1}
        on_release: app.register(root.ids.cpf.text, root.ids.endereco.text, root.ids.idade.text, root.ids.nascimento.text, root.ids.nome.text, root.ids.salario.text)